--// Badge Generator GUI
-- Client-sided | Safe & fun fake notification tool
-- Works on Delta mobile or PC executors

local player = game.Players.LocalPlayer
local CoreGui = game:GetService("CoreGui")
local StarterGui = game:GetService("StarterGui")

-- GUI Setup
local gui = Instance.new("ScreenGui")
gui.Name = "BadgeGenerator"
gui.ResetOnSpawn = false
gui.Parent = CoreGui

local frame = Instance.new("Frame")
frame.Size = UDim2.new(0, 320, 0, 280)
frame.Position = UDim2.new(0.5, -160, 0.4, -140)
frame.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
frame.BackgroundTransparency = 0.2
frame.BorderSizePixel = 0
frame.Active = true
frame.Draggable = true
frame.Parent = gui

local corner = Instance.new("UICorner")
corner.CornerRadius = UDim.new(0, 12)
corner.Parent = frame

-- Title Label
local titleLabel = Instance.new("TextLabel")
titleLabel.Size = UDim2.new(1, 0, 0, 30)
titleLabel.BackgroundTransparency = 1
titleLabel.Text = "üèÖ Badge Generator"
titleLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
titleLabel.Font = Enum.Font.SourceSansBold
titleLabel.TextSize = 20
titleLabel.Parent = frame

-- Title TextBox
local titleBox = Instance.new("TextBox")
titleBox.Size = UDim2.new(0.9, 0, 0, 30)
titleBox.Position = UDim2.new(0.05, 0, 0, 45)
titleBox.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
