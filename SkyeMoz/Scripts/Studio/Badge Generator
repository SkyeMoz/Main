-- Toggle Delete GUI Button
local toggleBtn = Instance.new("TextButton")
toggleBtn.Size = UDim2.new(0, 25, 0, 25)
toggleBtn.Position = UDim2.new(0.05, 0, 0, 205)
toggleBtn.BackgroundColor3 = Color3.fromRGB(60, 60, 60)
toggleBtn.Text = ""
toggleBtn.TextColor3 = Color3.fromRGB(255, 255, 255)
toggleBtn.Font = Enum.Font.SourceSansBold
toggleBtn.TextSize = 20
toggleBtn.Parent = frame
Instance.new("UICorner", toggleBtn)

local toggleLabel = Instance.new("TextLabel")
toggleLabel.Size = UDim2.new(0, 200, 0, 25)
toggleLabel.Position = UDim2.new(0.15, 0, 0, 205)
toggleLabel.BackgroundTransparency = 1
toggleLabel.Text = "Delete GUI after Submit"
toggleLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
toggleLabel.Font = Enum.Font.SourceSans
toggleLabel.TextSize = 18
toggleLabel.Parent = frame

local toggleOn = false

toggleBtn.MouseButton1Click:Connect(function()
	toggleOn = not toggleOn
	toggleBtn.BackgroundColor3 = toggleOn and Color3.fromRGB(0, 200, 0) or Color3.fromRGB(60, 60, 60)
end)

-- Submit Button
local submitBtn = Instance.new("TextButton")
submitBtn.Text = "Submit ‚úÖ"
submitBtn.Size = UDim2.new(0.9, 0, 0, 35)
submitBtn.Position = UDim2.new(0.05, 0, 0, 240)
submitBtn.BackgroundColor3 = Color3.fromRGB(0, 170, 255)
submitBtn.TextColor3 = Color3.new(1, 1, 1)
submitBtn.Font = Enum.Font.SourceSansBold
submitBtn.TextSize = 20
submitBtn.Parent = frame
Instance.new("UICorner", submitBtn)

-- Function to send notification
submitBtn.MouseButton1Click:Connect(function()
	local title = titleBox.Text ~= "" and titleBox.Text or "Notification"
	local subtitle = subBox.Text ~= "" and subBox.Text or "You received a fake badge!"
	local thumbID = thumbBox.Text ~= "" and thumbBox.Text or "7577357898"
	local delay = tonumber(delayBox.Text) or 0

	submitBtn.Text = "‚è≥ Waiting..."
	if toggleOn then
		gui:Destroy()
	end

	task.wait(delay)

	StarterGui:SetCore("SendNotification", {
		Title = title,
		Text = subtitle,
		Icon = "rbxassetid://" .. thumbID,
		Duration = 5,
	})
end)
